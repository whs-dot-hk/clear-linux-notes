load("@rules_foreign_cc//tools/build_defs:make.bzl", "make")

filegroup(
    name = "all",
    srcs = glob(["**"]),
)

make(
    name = "library",
    lib_source = ":all",
    static_libraries = [
        "liblua.a",
    ],
    make_commands = [
        "make -j`nproc` PLAT=linux",
        "make install INSTALL_TOP=$$INSTALLDIR$$",
    ],
    visibility = ["//visibility:public"],
)
